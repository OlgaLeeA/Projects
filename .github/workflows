name: CI/CD Pipeline

on:
  push:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout
      uses: actions/checkout@v2

    - name: Login to Docker Hub
      uses: docker/login-action@v1
      with:
        username: ${{ secrets.DOCKER_deatend }}
        password: ${{ secrets.DOCKER_A9byr9valg9173*! }}

    - name: Build Docker image
      run: sudo docker build -t deatend/my-app:1.0 .

    - name: Push Docker image to Docker Hub
      run: sudo docker push deatend/my-app:1.0

